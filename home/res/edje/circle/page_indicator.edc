		}
      programs {
         script {
            public activated = 0;
         }
         program {
            signal: "elm,state,active";
            source: "elm";
            script: {
               if (get_int(activated) == 0) {
                  run_program(PROGRAM:"active");
                  set_int(activated, 1);
               }
            }
         }
